<div class="container mx-auto bg-gray-700 text-white">
    <h1>Articles listing page</h1>
</div>

<div class="container">
<table class="table-auto border-2 w-full">
    <thead class="bg-gray-500 text-white">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
            
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr class="border-2">
            <td>
                <%= article.title %>
            </td>
            <td><%= article.user.username %></td>
            <td>
                <%= article.description %>
            </td>
            <td> <%= link_to 'Show', article_path(article) %></td>
            <td> <%= link_to 'Edit', edit_article_path(article) %></td>
            <td>
                <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
<div class="container">
<%= link_to 'New Article', new_article_path %>
</div>